<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|fill"
    android:background="#0099cc"
    tools:context=".Main" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->


    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="91dp" />
            

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <GridLayout
                    android:id="@+id/tabDrinkCounter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:rowCount="50" >

                    <TextView
                        android:id="@+id/labelBAC"
                        android:layout_width="179dp"
                        android:layout_height="61dp"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:gravity="center"
                        android:text="Blood Alcohol Content (BAC):"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/labelDrinkCount"
                        android:layout_width="160dp"
                        android:layout_height="53dp"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_row="0"
                        android:gravity="center"
                        android:text="Drink Count:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/labelDrinkCountNumber"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="right|top"
                        android:layout_row="9"
                        android:gravity="center"
                        android:text="#"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="70sp" />

                    <Button
                        android:id="@+id/buttonBeer"
                        android:layout_width="124dp"
                        android:layout_height="132dp"
                        android:layout_column="0"
                        android:layout_gravity="left|top"
                        android:layout_row="11"
                        android:text="Beer" />

                    <Button
                        android:id="@+id/buttonWine"
                        android:layout_width="124dp"
                        android:layout_height="132dp"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_row="11"
                        android:text="Wine" />

                    <Button
                        android:id="@+id/buttonShot"
                        android:layout_width="124dp"
                        android:layout_height="132dp"
                        android:layout_column="0"
                        android:layout_gravity="right|top"
                        android:layout_row="11"
                        android:text="Shot" />

                    <TextView
                        android:id="@+id/labelDayHoursMinutes"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_column="0"
                        android:layout_gravity="bottom|center"
                        android:layout_row="49"
                        android:gravity="center"
                        android:text="    Hours  :  Minutes"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/labelTimeUntilSober"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_row="19"
                        android:text="Time Until Sober:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/labelSoberTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_row="20"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="70sp" />

                    <TextView
                        android:id="@+id/labelBACPercent"
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|top"
                        android:layout_row="9"
                        android:gravity="center"
                        android:text="%"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="70sp" />

                </GridLayout>

                <GridLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                </GridLayout>

                <GridLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                </GridLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</FrameLayout>